<h1>エンドユーザの注文詳細画面</h1>

<table>
<h3>--注文情報--</h3>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%y/%m/%d') %></td>
  </tr>

  <tr>
    <th>配送先</th>
      <td>
        <p>〒<%= @order.postal_code %></p>
        <p><%= @order.address %></p>
        <p><%= @order.name %><p>
      </td>
  </tr>

  <tr>
    <th>支払い方法</th>
    <td><%= @order.method_of_payment %></td>
  </tr>

  <tr>
    <th>ステータス</th>
    <td><%= @order.order_status %></td>
  </tr>

</table>

<table>
  <h3>--請求情報--</h3>

  <tr>
    <th>商品合計</th>
    <td><%= @order.billing_amount - @order.shipping_cost %></td>
  </tr>

  <tr>
    <th>配送料</th>
    <td><%= @order.shipping_cost %></td>
  </tr>

  <tr>
    <th><strong>ご請求額</strong></th>
    <td><%= @order.billing_amount %></td>
  </tr>

</table>

<table>
  <h3>--注文内容--</h3>
    <thead>
      <tr>
        <th>商品</th>
        <th>単価（税込み）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <td><%= cart_item.amount %></td>
        <td>
          <% sub_total = cart_item.item.price * cart_item.amount %>
          <%= sub_total %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>