<h2>新着商品</h2>

<% @items.each do |item| %>
<%= link_to item_path(item) do %>
  <%= attachment_image_tag item, :image, :fill, 60, 60 %>
<% end %>
<p><%= item.name %><p>
<p><%= item.price %></p>
<% end %>
<%= link_to "全ての商品を見る>", items_path %>