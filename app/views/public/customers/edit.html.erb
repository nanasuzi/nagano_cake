<div class= "container">
  <div class="row">
    <label class=" text-white bg-secondary px-3"><h4>会員情報編集</h4></label>
  </div>
</div>

<div class="container">
<%= form_with model:current_customer, url:customers_path, method: :patch, local: true do |f| %>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="name">氏名</label>
      <div class= "col-sm-9">
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="kana">フリガナ</label>
      <div class= "col-sm-9">
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="kana">フリガナ</label>
      <div class= "col-sm-9">
        <%= f.text_field :postal_code %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="address">住所</label>
      <div class= "col-sm-9">
        <%= f.text_field :address %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="telephone_number">電話番号</label>
      <div class= "col-sm-9">
    <%= f.text_field :telephone_number %>
      </div>
  </div>

 <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="email">メールアドレス</label>
      <div class= "col-sm-9">
        <%= f.text_field :email %>
      </div>
 </div>

 <div class="form-group row">
   <div class= "col-sm-9 offset-2">
  <%= f.submit "編集内容を保存", class: "btn btn-success" %>
   <%= link_to "退会する", customers_check_path, class: "btn btn-danger mx-5" %>
   </div>
 </div>
  <% end %>
</div>