<h1>エンドユーザの商品一覧ページ</h1>

<h1>商品一覧</h1>

<% @items.each do |item| %>
  <% if item.is_active %>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill, 60, 60 %>
    <% end %>
      <p><%= item.name %><p>
      <p><%= item.price %></p>
<% end %>
<% end %>
<%= paginate @items %>