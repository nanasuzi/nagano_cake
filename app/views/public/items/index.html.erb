<div class= "container">
  <div class="row">
    <label class="mx-auto text-white bg-secondary px-3"><h4>商品一覧</h4></label>
  </div>
</div>

<div class="row d-flex flex-cloumn text-center">
<% @items.each do |item| %>
<div class="col-3">
  <% if item.is_active %>
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :image, :fill, 100, 100 %>
    <% end %>
      <p><%= item.name %><p>
      <p><%= item.price.to_s(:delimited) %>円</p>
  <% end %>
  </div>
<% end %>

<div class="container">
<div class="row">
<%= paginate @items, class: "mx-auto" %>
</div>
</div>