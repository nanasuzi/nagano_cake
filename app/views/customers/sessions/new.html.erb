<div class= "container">
  <div class="row">
    <label class="text-white bg-secondary px-3 my-2"><h4>ログイン</h4></label>
  </div>
</div>

<div class="container">
<label class="mx-auto text-white bg-secondary px-3 my-4"><h5>会員の方はこちらからログイン</h5></label>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
     <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="image">メールアドレス</label>
      <div class= "col-sm-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@gmail.com", class: "form-control" %>
</div>
</div>


         <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="image">パスワード</label>
      <div class= "col-sm-6">
    <%= f.password_field :password, autocomplete: "current-password",class: "form-control" %>
    </div>
    </div>

      <div class="form-group row">

  <% if devise_mapping.rememberable? %>
    <div class="field col-6 offset-2">
      <%= f.check_box :remember_me %>記憶させる
    </div>
  <% end %>
</div>

<div class="form-group row">
  <div class="actions col-6 offset-2">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<div class= "container">
  <div class="row">
    <label class="text-white bg-secondary px-3 my-4"><h5>会員登録がお済でない方</h5></label>
  </div>
</div>
<%= render "customers/shared/links" %>


</div>