<h1>管理者用トップページ</h1>


<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
   </thead>

   <tbody>

    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.name %></td>

        <td>
          <% sum = 0 %>
          <% order.order_details.each do |order_detail| %>
          <% sum += order_detail.amount %>
          <% end %>
          <%= sum %>
        </td>

        <td><%= order.order_status %></td>
      </tr>
    <% end %>

   </tbody>
  </table>
