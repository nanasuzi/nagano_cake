<div class= "container">
  <div class="row">
    <label class=" text-white bg-secondary px-3"><h4><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h4></label>
  </div>
</div>

<div class="container">
<%= form_with model:@customer, url:admin_customer_path(@customer), method: :patch, local: true do |f| %>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">会員ID</label>
    <div class= "col-sm-9">
    <%= @customer.id %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">氏名</label>
    <div class= "col-sm-9">
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">フリガナ</label>
    <div class= "col-sm-9">
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
   </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">郵便番号</label>
          <div class= "col-sm-9">
    <%= f.text_field :postal_code %>
   </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">住所</label>
          <div class= "col-sm-9">
    <%= f.text_field :address %>
  </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">電話番号</label>
          <div class= "col-sm-9">
    <%= f.text_field :telephone_number %>
  </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">メールアドレス</label>
          <div class= "col-sm-9">
    <%= f.text_field :email %>
  </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">会員ステータス</label>
          <div class= "col-sm-9">
    <%= f.radio_button :is_active, true %>有効
    <%= f.radio_button :is_active, false %>退会
  </div>
  </div>

  <%= f.submit "変更を保存", class: "btn btn-success" %>

<% end %>
</div>