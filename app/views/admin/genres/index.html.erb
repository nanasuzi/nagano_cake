<h1>管理者の商品ジャンル一覧ページ＆追加登録画面</h1>

<%= form_with model:@genre, url: admin_genres_path, method: :post, local:true do |f| %>
<label>ジャンル名</label>
<%= f.text_field :name, placeholder: "ジャンル名" %>
<%= f.submit "新規登録" %>
<% end %>

<table>
  <thrad>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thrad>

  <tbody>
        <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
        <%= link_to "編集する", edit_admin_genre_path(genre) %>
      </td>
    </tr>
        <% end %>
  </tbody>