<div class="container">
<label class="bg-secondary text-white"><h4 class="px-3">ジャンル一覧・追加</h4></label>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <%= @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@genre, url: admin_genres_path, method: :post, local:true do |f| %>
<label>ジャンル名</label>
<%= f.text_field :name, placeholder: "ジャンル名", class: "mx-2" %>
<%= f.submit "新規登録", class: "mx-5 btn btn-success" %>
<% end %>

<div class="row">
<table class="table col-3 my-5">
  <thrad>
    <tr>
      <th scop="col">ジャンル</th>
      <th></th>
    </tr>
  </thrad>

  <tbody>
        <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
      </td>

      <td>
        <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
      </td>
    </tr>
        <% end %>
  </tbody>

  </div>

  </div>