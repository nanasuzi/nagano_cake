<div class= "container">
  <div class="row">
    <label class=" text-white bg-secondary px-3"><h4>ジャンル編集</h4></label>
  </div>
</div>

<%= form_with model:@genre, url: admin_genre_path(@genre), method: :patch, local:true do |f| %>

<div class="container">
  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="genre">ジャンル名</label>
      <div class= "col-sm-9">
        <%= f.text_field :name, placeholder: "ジャンル名" %>
        <%= f.submit "変更を保存", class: "btn btn-success mx-5" %>
    　</div>
  </div>
</div>

<% end %>