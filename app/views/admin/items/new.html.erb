<div class= "container">
  <div class="row">
    <label class="mx-auto text-white bg-secondary px-3"><h4>商品新規登録</h4></label>
  </div>
</div>



  <div class="container">
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました。
  <%= @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @item, url: admin_items_path, method: :post, local:true do |f| %>
  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="image">商品画像</label>
      <div class= "col-sm-9">
        <%= f.attachment_field :image %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="name">商品名</label>
      <div class= "col-sm-9">
        <%= f.text_field :name, placeholder:"商品名", autofocus: true, class: "form-control" %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="introduction">商品説明</label>
      <div class= "col-sm-9">
        <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", class: "form-control" %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="genre">ジャンル</label>
      <div class= "col-sm-9">
        <%= f.collection_select :genre_id, @genres, :id, :name, { prompt: "--選択してください--" }, class: "form-control" %>
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="price">税抜価格</label>
      <div class= "col-sm-9">
        <%= f.text_field :price %>円
      </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3 col-form-label" for="item_status">販売ステータス</label>
      <div class= "col-sm-9">
        <%= f.radio_button :is_active, true %>販売中
        <%= f.radio_button :is_active, false %>販売停止中
      </div>

        <div class="form-group row mx-auto">
          <%= f.submit '新規登録', class: "btn btn-success btn-block" %>
        </div>
<% end %>

      </div>
    </div>
  </div>