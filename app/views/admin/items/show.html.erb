<h1>管理者の商品詳細ページ</h1>

  <h3>商品詳細</h3>
    <%= attachment_image_tag @item, :image, :fill, 60, 60 %>

  <div>
  <label>商品名</label>
    <%= @item.name %>
  </div>

  <div>
  <label>商品説明</label>
    <%= @item.introduction %>
  </div>

  <div>
  <label>ジャンル</label>
    <%= @item.genre.name %>
  </div>

  <div>
  <label>税込み価格(税抜き価格)</label>
    <%= @item.price %>
  </div>

  <div>
  <label>販売ステータス</label>
    <%= @item.is_active ? "販売中" : "販売停止中" %>
  </div>

<div>
  <%= link_to "編集する", edit_admin_item_path(@item) %>
</div>
