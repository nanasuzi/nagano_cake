  <div class= "container">
      <label class="px-3 bg-secondary"><h4 class="text-white">商品詳細</h4></label>
        <div class="row col-12">
          <div class="col-5">
          <%= attachment_image_tag @item, :image, :fill, 350, 250 %>
          </div>


  <div class="row col-5 d-flex flex-column">

    <div>
    <label>商品名</label>
    <%= @item.name %>
    </div>


  <div>
  <label>商品説明</label>
    <%= @item.introduction %>
  </div>

  <div>
  <label>ジャンル</label>
    <%= @item.genre.name %>
  </div>

  <div>
  <label>税込み価格(税抜き価格)</label>
    <%= @item.price %>
  </div>


  <div>
  <label>販売ステータス</label>
    <% if @item.is_active %>
      販売
    <% else %>
      販売停止中
    <% end %>
  </div>

    <div>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>

    </div>
</div>
</div>
