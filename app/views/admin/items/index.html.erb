<h1>管理者の商品一覧ページ</h1>

<label>商品一覧</label>
<% @items.each do |item| %>

<table>
  <thead>
    <tr>
    　<th>商品ID</th>
    　<th>商品名</th>
      <th>税抜き価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to "#{item.name}", admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active %>
            販売中
          <% else %>
            販売停止中
          <% end %>
      </td>
    </tr>
  </tbody>

</table>


<% end %>